.container
  = simple_form_for(@job, html:{ class: 'form-horizontal'}) do |f|
  
    =f.collection_select :category_id, Category.all, :id, :name, {promt: "Choose Category"}, input_html:{class:"dropdown-toggle"}
    =f.input :job, label: "Job Title", input_html:{class: "form-control"}
    =f.input :description, label: "Job Description", input_html:{class: "form-control"}
    =f.input :company, label: "Company", input_html:{class: "form-control"}
    =f.input :url, label: "Companies URL", input_html:{class: "form-control"}
    %br/
    =f.button :submit
    
  
